<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/nendoc1"
    android:orientation="vertical"
    android:weightSum="3.0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:layout_weight="0.38"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_weight="0.02"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal" >
<!--  
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/back" />
                
          -->
          
          
          <Button 
              android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back2"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                />
          
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.18"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTieuDeMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2.0pt"
                android:layout_weight="1.11"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="center"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:minHeight="85.0dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Tiêu đề món ăn"
                android:textColor="#ff40b517"
                android:textSize="11pt"
                android:textStyle="bold"
                android:focusableInTouchMode="true"
                
    			
                />
            
            <!--  android:freezesText="true" -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.09"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25.0dip"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvChiSo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="TextView"
                android:textColor="#ff8f2214"
                android:textSize="7.0pt"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_weight="2.41"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/webkit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1.0pt"
            android:focusableInTouchMode="false"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/read"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" />

</LinearLayout>